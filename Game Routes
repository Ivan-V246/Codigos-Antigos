#include <bits/stdc++.h>
using namespace std;
#define op ios::sync_with_stdio(false); cin.tie(NULL);
#define INF 0x3f3f3f3f
#define pii pair<int, int>
#define ll long long
#define mkp make_pair
#define endl '\n'
#define f first
#define s second
#define int long long 
#define dbg(x) cout << #x << " " << x << endl;
const int MAXN = 1e5+10;
vector <int> grafo[MAXN];
int n, m;
int dp[MAXN];
int mo = 1000000007;

int solve(int atual) {
    if(~dp[atual]) return (dp[atual] % mo);
    if(atual == n) return 1;
    int soma = 0;
    for (auto x : grafo[atual]) {
        soma += (solve(x) % mo);
    }

    return dp[atual] = (soma % mo);
}


signed main() { op
    memset(dp, -1, sizeof dp); 
    cin >> n >> m;
    for (int i = 0; i < m; i++) {
        int a, b;
        cin >> a >> b;
        grafo[a].emplace_back(b);
    }
    solve(1);
    cout << dp[1] << endl;
}
