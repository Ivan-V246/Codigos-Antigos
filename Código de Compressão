#include <bits/stdc++.h>
using namespace std;
#define op ios::sync_with_stdio(false); cin.tie(NULL);
#define INF 0x3f3f3f3f
#define pii pair<int,int>
#define ll long long
#define mkp make_pair
#define endl '\n'
#define f first
#define s second
#define dbg(x) cout << #x << " " << x << endl;
const int MAXN = 1e5+10;
const int MAXL = 20;


signed main() {
    int n;
    string seq;
    cin >> n >> seq;
    seq += '.';
    char ant = '.';
    int cont = 0;
    vector <int> num;
    vector <char> letra;
    for(int i = 0; i <= n; i++) {
        if(seq[i] == ant) {
            cont++;
            ant = seq[i];
        } else {
            num.emplace_back(cont);
            cont = 1;
            letra.emplace_back(ant);
            ant = seq[i];
        }
    }
    for(int i = 1; i < num.size(); i++) {
        cout << num[i] << " " << letra[i] << " ";
    }
    cout << endl;
}
